<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white flex-shrink-0" style="width:250px;min-height:100vh;">
            <div class="p-3 border-bottom border-secondary">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <div class="d-flex shadow-sm rounded overflow-hidden">
                        <span class="px-3 py-1 text-warning fw-bold bg-secondary">THE BAG</span>
                        <span class="px-3 py-1 text-dark fw-bold bg-warning">STUDIO</span>
                    </div>
                </div>
                <div class="text-center">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center shadow-sm overflow-hidden" style="width:60px;height:60px;">
                        <img src="~/hinh/logo.jpg" alt="Logo" class="img-fluid" style="max-width:100%;max-height:100%;" />
                    </div>
                    <div class="mt-2">
                        <h6 class="mb-0 text-white">Admin User</h6>
                        <small class="text-secondary">Quản trị viên</small>
                    </div>
                </div>
            </div>
            <nav class="p-3">
                <div class="mb-4">
                    <h6 class="text-secondary fw-semibold mb-2">Tổng quan</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-chart-pie me-2"></i> Thống kê
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="PhanTich">
                                <i class="fas fa-chart-line me-2"></i> Phân tích
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="mb-4">
                    <h6 class="text-secondary fw-semibold mb-2">Quản lý</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center justify-content-between" asp-controller="SanPham" asp-action="Index">
                                <div><i class="fas fa-shopping-bag me-2"></i> Sản phẩm</div>
                                <span class="badge bg-primary">567</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center justify-content-between" asp-controller="Admin" asp-action="DonHang">
                                <div><i class="fas fa-shopping-cart me-2"></i> Đơn hàng</div>
                                <span class="badge bg-danger">24</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="KhachHang">
                                <i class="fas fa-users me-2"></i> Khách hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="DanhMuc" asp-action="DanhMuc">
                                <i class="fas fa-tags me-2"></i> Danh mục
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-warehouse me-2"></i> Kho hàng
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="mb-4">
                    <h6 class="text-secondary fw-semibold mb-2">Marketing</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="ChienDich">
                                <i class="fas fa-bullhorn me-2"></i> Chiến dịch
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="MaGiamGia">
                                <i class="fas fa-ticket-alt me-2"></i> Mã giảm giá
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="mb-4">
                    <h6 class="text-secondary fw-semibold mb-2">Hệ thống</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="CaiDat">
                                <i class="fas fa-cog me-2"></i> Cài đặt
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="#">
                                <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <!-- Nội dung chính -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>