@model IEnumerable<DATN.Models.ProductVariant>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Danh sách biến thể sản phẩm";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Biến thể sản phẩm - The Bag Studio Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="main-content" id="mainContent">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary me-3" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>

                <div>
                    <h4 class="mb-0">Biến thể sản phẩm</h4>
                    <small class="text-muted">Quản lý danh sách biến thể</small>
                </div>

                <form method="get" class="input-group ms-auto me-3" style="width: 300px;">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm biến thể..." value="@Context.Request.Query["search"]">
                </form>

                <div class="dropdown me-2">
                    <button class="btn btn-outline-secondary position-relative" data-bs-toggle="dropdown" aria-expanded="false" id="bellDropdown">
                        <i class="fas fa-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @{
                                var lowStockList = ViewBag.LowStockList as List<DATN.Models.ProductVariant>;
                                var count = lowStockList != null ? lowStockList.Count : 0;
                            }
                            @count
                        </span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="bellDropdown">
                        @{
                            if (lowStockList == null || !lowStockList.Any())
                            {
                                <li><span class="dropdown-item text-muted">Không có biến thể sắp hết hàng</span></li>
                            }
                            else
                            {
                                foreach (var item in lowStockList)
                                {
                                    <li>
                                        <a class="dropdown-item low-stock-item" href="@Url.Action("Edit", new { id = item.VariantID })" data-product="@item.Product?.ProductName" data-stock="@item.Stock">
                                            @item.Product?.ProductName - còn @item.Stock
                                        </a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>


                <div class="dropdown">
                    <button class="btn btn-outline-secondary d-flex align-items-center" data-bs-toggle="dropdown">
                        <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                            <i class="fas fa-user text-dark small"></i>
                        </div>
                        <div class="text-start d-none d-md-block">
                            <div class="small">Admin User</div>
                            <div class="small text-muted">Quản trị viên</div>
                        </div>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Stats Cards -->
        <div class="container-fluid p-4">
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-xs text-primary text-uppercase mb-1">Tổng biến thể</div>
                                <div class="h5 mb-0">@ViewBag.TotalVariants</div>
                            </div>
                            <i class="fas fa-box fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-xs text-success text-uppercase mb-1">Đang bán</div>
                                <div class="h5 mb-0">@ViewBag.ActiveVariants</div>
                            </div>
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-xs text-warning text-uppercase mb-1">Sắp hết hàng</div>
                                <div class="h5 mb-0">@ViewBag.LowStockVariants</div>
                            </div>
                            <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-xs text-danger text-uppercase mb-1">Hết hàng</div>
                                <div class="h5 mb-0">@ViewBag.OutOfStockVariants</div>
                            </div>
                            <i class="fas fa-times-circle fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span class="mb-0">Danh sách biến thể sản phẩm</span>
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Thêm biến thể mới
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>SKU</th>
                                    <th>Màu</th>
                                    <th>Kích thước</th>
                                    <th>Giá bán</th>
                                    <th>Tồn kho</th>
                                    <th>Trạng thái</th>
                                    <th class="text-center">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Product?.ProductName</strong><br />
                                            <small class="text-muted">ID: @item.VariantID</small>
                                        </td>
                                        <td>@item.SKU</td>
                                        <td>@item.Color?.ColorName</td>
                                        <td>@item.Size?.SizeName</td>
                                        <td>@item.SalePrice?.ToString("N0") ₫</td>
                                        <td>@item.Stock</td>
                                        <td>
                                            @if (item.Stock == 0)
                                            {
                                                <span class="badge bg-danger">Hết hàng</span>
                                            }
                                            else if (item.Stock <= 5)
                                            {
                                                <span class="badge bg-warning text-dark">Sắp hết</span>
                                            }
                                            else if (item.Status == "Active")
                                            {
                                                <span class="badge bg-success">Đang bán</span>
                                            }
                                           
                                        </td>
                                        <td class="text-center">
                                            <div class="d-inline-flex border rounded overflow-hidden">
                                                <a asp-action="Edit" asp-route-id="@item.VariantID"
                                                   class="text-warning d-flex align-items-center justify-content-center px-2 py-1 border-end"
                                                   title="Sửa">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.VariantID"
                                                   class="text-danger d-flex align-items-center justify-content-center px-2 py-1"
                                                   title="Xóa">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle sidebar
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
            localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
        });

        if (localStorage.getItem('sidebarCollapsed') === 'true') {
            document.getElementById('sidebar').classList.add('collapsed');
            document.getElementById('mainContent').classList.add('expanded');
        }

        // Thông báo khi bấm item trong dropdown
        document.querySelectorAll('.low-stock-item').forEach(function (el) {
            el.addEventListener('click', function (e) {
                e.preventDefault();
                const name = this.getAttribute('data-product');
                const stock = this.getAttribute('data-stock');
                if (confirm(`Bạn muốn chỉnh sửa biến thể "${name}" còn ${stock} sản phẩm?`)) {
                    // Nếu đồng ý, điều hướng
                    window.location.href = this.getAttribute('href');
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
