@model IEnumerable<DATN.Models.DanhMuc>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<style>
    .category-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        flex-shrink: 0;
    }
</style>

<div class="container-fluid p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Danh sách Danh mục</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm danh mục
        </a>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card category-card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(category.HinhAnh))
                                {
                                    <img src="@category.HinhAnh" alt="@category.TenDanhMuc" class="category-image me-3" />
                                }
                                else
                                {
                                    <img src="~/placeholder.svg" alt="No Image" class="category-image me-3" />
                                }
                                <div class="flex-grow-1">
                                    <h6 class="card-title mb-1">@category.TenDanhMuc</h6>
                                    <small class="text-muted">Mã: @category.MaDanhMuc</small>
                                </div>
                            </div>
                            <p class="card-text text-muted small">
                                @category.MoTa
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success">Hoạt động</span>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@category.MaDanhMuc" class="btn btn-outline-info" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@category.MaDanhMuc" class="btn btn-outline-primary" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.MaDanhMuc" class="btn btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    Không có danh mục nào.
                </div>
            </div>
        }
    </div>
</div>
