@model DATN.Models.DanhMuc

@{
    ViewData["Title"] = "Thêm Danh Mục";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="TenDanhMuc"></label>
        <input asp-for="TenDanhMuc" class="form-control" />
        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Hình ảnh</label>
        <input asp-for="HinhAnhFile" type="file" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
