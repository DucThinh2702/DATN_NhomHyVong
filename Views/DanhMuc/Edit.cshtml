@model DATN.Models.DanhMuc

@{
    ViewData["Title"] = "Sửa Danh Mục";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaDanhMuc" />
    <div class="form-group">
        <label asp-for="TenDanhMuc"></label>
        <input asp-for="TenDanhMuc" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Hình ảnh hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            <img src="@Model.HinhAnh" style="max-height:150px;" />
        }
    </div>
    <div class="form-group">
        <label>Thay đổi hình ảnh</label>
        <input asp-for="HinhAnhFile" type="file" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
