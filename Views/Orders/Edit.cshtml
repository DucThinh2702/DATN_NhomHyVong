@model DATN.Models.OrderCreateViewModel

@{
    ViewData["Title"] = "Sửa đơn hàng";
    // Layout = "~/Views/Admin/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Order.OrderID" />

    <div class="form-group">
        <label asp-for="Order.UserID"></label>
        <input asp-for="Order.UserID" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Order.OrderDate"></label>
        <input asp-for="Order.OrderDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Order.Quantity"></label>
        <input asp-for="Order.Quantity" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Order.TotalAmount"></label>
        <input asp-for="Order.TotalAmount" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Order.PaymentMethodID"></label>
        <input asp-for="Order.PaymentMethodID" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Order.DiscountCode"></label>
        <input asp-for="Order.DiscountCode" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Order.ShippingFee"></label>
        <input asp-for="Order.ShippingFee" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Order.RecipientName"></label>
        <input asp-for="Order.RecipientName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.RecipientPhone"></label>
        <input asp-for="Order.RecipientPhone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.DeliveryAddress"></label>
        <input asp-for="Order.DeliveryAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.OrderStatus"></label>
        <input asp-for="Order.OrderStatus" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.PaymentStatus"></label>
        <input asp-for="Order.PaymentStatus" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.Note"></label>
        <textarea asp-for="Order.Note" class="form-control"></textarea>
    </div>


    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
