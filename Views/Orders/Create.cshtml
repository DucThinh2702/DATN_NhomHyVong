@model DATN.Models.Order

@{
    ViewData["Title"] = "Thêm đơn hàng";
}

<h2 class="mb-4">@ViewData["Title"]</h2>



<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="MaDH" class="form-label">Mã đơn hàng</label>
            <input asp-for="MaDH" class="form-control" placeholder="VD: DH01" />
            <span asp-validation-for="MaDH" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="MaKH" class="form-label">Mã khách hàng</label>
            <input asp-for="MaKH" class="form-control" placeholder="Nhập mã KH..." />
            <span asp-validation-for="MaKH" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="SoLuong" class="form-label">Số lượng</label>
            <input asp-for="SoLuong" class="form-control" placeholder="Tổng sản phẩm..." />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="TongTien" class="form-label">Tổng tiền</label>
            <input asp-for="TongTien" class="form-control" placeholder="Ví dụ: 1000000" />
            <span asp-validation-for="TongTien" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="MaPTTT" class="form-label">Mã PTTT</label>
            <input asp-for="MaPTTT" class="form-control" placeholder="VD: COD, ATM..." />
            <span asp-validation-for="MaPTTT" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="TrangThaiThanhToan" class="form-label">Trạng thái thanh toán</label>
            <input asp-for="TrangThaiThanhToan" class="form-control" placeholder="Đã thanh toán / Chưa thanh toán" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="TrangThaiDonHang" class="form-label">Trạng thái đơn hàng</label>
            <input asp-for="TrangThaiDonHang" class="form-control" placeholder="Chờ xác nhận / Đã giao..." />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="TenNguoiNhan" class="form-label">Tên người nhận</label>
            <input asp-for="TenNguoiNhan" class="form-control" placeholder="Nguyễn Văn A..." />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="SoDienThoaiNguoiNhan" class="form-label">SĐT người nhận</label>
            <input asp-for="SoDienThoaiNguoiNhan" class="form-control" placeholder="090xxxxxxx" />
        </div>
        <div class="col-12 mb-3">
            <label asp-for="DiaChiGiaoHang" class="form-label">Địa chỉ giao hàng</label>
            <input asp-for="DiaChiGiaoHang" class="form-control" placeholder="Số nhà, phường, quận..." />
        </div>
        <div class="col-12 mb-3">
            <label asp-for="GhiChu" class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" placeholder="Giao giờ hành chính..."></textarea>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="MaGiamGia" class="form-label">Mã giảm giá</label>
            <input asp-for="MaGiamGia" class="form-control" placeholder="ABC123..." />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="PhiVanChuyen" class="form-label">Phí vận chuyển</label>
            <input asp-for="PhiVanChuyen" class="form-control" placeholder="VD: 15000" />
        </div>
    </div>

    <button type="submit" class="btn btn-success me-2">
        <i class="bi bi-check-circle-fill"></i> Lưu đơn hàng
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Huỷ
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
