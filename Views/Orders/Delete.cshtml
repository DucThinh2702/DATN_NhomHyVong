@model DATN.Models.Order

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<h2>Xóa đơn hàng</h2>

<h4>Bạn có chắc chắn muốn xóa đơn hàng này?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-3">Mã đơn hàng</dt>
    <dd class="col-sm-9">@Model.MaDH</dd>

    <dt class="col-sm-3">Tên người nhận</dt>
    <dd class="col-sm-9">@Model.TenNguoiNhan</dd>

    <dt class="col-sm-3">Tổng tiền</dt>
    <dd class="col-sm-9">@Model.TongTien.ToString("N0") đ</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="MaDH" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
