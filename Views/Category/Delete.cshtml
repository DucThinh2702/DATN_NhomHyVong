@model DATN.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning mt-3">
        <h5>Bạn có chắc chắn muốn xóa danh mục này không?</h5>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Tên danh mục</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3">Hình ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.CategoryImage))
            {
                <img src="~/hinh/@Model.CategoryImage" class="img-thumbnail" style="max-height:100px;" />
            }
            else
            {
                <span class="text-muted fst-italic">Chưa có hình</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.CategoryId" method="post">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
