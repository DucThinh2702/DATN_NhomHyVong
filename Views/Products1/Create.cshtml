@model DATN.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content" id="mainContent">
    <h1 class="mb-4">Thêm sản phẩm mới</h1>

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Tên sản phẩm -->
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
            <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm..." />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <!-- Mô tả -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết sản phẩm..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <!-- Giá bán -->
            <div class="col-md-4 mb-3">
                <label asp-for="SalePrice" class="form-label">Giá bán (VND)</label>
                <input asp-for="SalePrice" class="form-control" />
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>

            <!-- Giá gốc -->
            <div class="col-md-4 mb-3">
                <label asp-for="OriginalPrice" class="form-label">Giá gốc (VND)</label>
                <input asp-for="OriginalPrice" class="form-control" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>

            <!-- Tồn kho -->
            <div class="col-md-4 mb-3">
                <label asp-for="Stock" class="form-label">Tồn kho</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Danh mục -->
            <div class="col-md-6 mb-3">
                <label asp-for="CategoryID" class="form-label">Danh mục</label>
                @Html.DropDownListFor(model => model.CategoryID,
                         new SelectList(ViewBag.Categories, "Value", "Text"),
                         "-- Chọn danh mục --",
                         new { @class = "form-select" })
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label">Tồn kho</label>
                    <input asp-for="Stock" class="form-control" placeholder="Số lượng tồn..." />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label">Danh mục (ID)</label>
                    <input asp-for="CategoryId" class="form-control" placeholder="ID danh mục..." />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                @* combobox *@
                @* <div class="col-md-6 mb-3"> *@
                @*     <label asp-for="CategoryID" class="form-label">Danh mục</label> *@
                @*     @Html.DropDownListFor(model => model.CategoryID, *@
                @*              new SelectList(ViewBag.Categories, "Value", "Text"), *@
                @*              "-- Chọn danh mục --", *@
                @*              new { @class = "form-select" }) *@
                @*     <span asp-validation-for="CategoryID" class="text-danger"></span> *@
                @* </div> *@
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Size" class="form-label">Kích thước</label>
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Color" class="form-label">Màu sắc</label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Material" class="form-label">Chất liệu</label>
                    <input asp-for="Material" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Ảnh sản phẩm</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label">Trạng thái</label>
                <input asp-for="Status" class="form-control" placeholder="VD: Đang bán, Hết hàng..." />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Size" class="form-label">Kích thước</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Color" class="form-label">Màu sắc</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Material" class="form-label">Chất liệu</label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
        </div>

        <!-- Ảnh sản phẩm -->
        <div class="mb-3">
            <label class="form-label">Ảnh sản phẩm</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Lưu sản phẩm
        </button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
