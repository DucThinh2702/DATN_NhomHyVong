@model DATN.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}
<div class="main-content" id="mainContent">

<h1 class="mb-4">Chi tiết sản phẩm</h1>

<div class="card mb-3 shadow-sm">
    <div class="row g-0">
        <!-- Cột ảnh sản phẩm -->
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ThumbnailImage))
            {
                <img src="@Model.ThumbnailImage" class="img-fluid rounded-start" alt="Ảnh sản phẩm" />
            }
            else
            {
                <div class="text-muted text-center p-4">Chưa có ảnh</div>
            }
        </div>

        <!-- Cột thông tin sản phẩm -->
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.ProductName</h5>

                <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>

                <p class="card-text">
                    <strong>Giá bán:</strong>
                    @(Model.SalePrice.HasValue ? Model.SalePrice.Value.ToString("N0") + " ₫" : "Chưa có") <br />
                    <strong>Giá gốc:</strong>
                    @(Model.OriginalPrice.HasValue ? Model.OriginalPrice.Value.ToString("N0") + " ₫" : "Chưa có")
                </p>

                <p class="card-text">
                    <strong>Tồn kho:</strong> @Model.Stock <br />
                    <strong>Kích thước:</strong> @(string.IsNullOrEmpty(Model.Size) ? "Chưa có" : Model.Size) <br />
                    <strong>Màu sắc:</strong> @(string.IsNullOrEmpty(Model.Color) ? "Chưa có" : Model.Color) <br />
                    <strong>Chất liệu:</strong> @(string.IsNullOrEmpty(Model.Material) ? "Chưa có" : Model.Material) <br />
                    <strong>Danh mục (ID):</strong> @Model.CategoryId
                </p>

                <p class="card-text">
                    <strong>Trạng thái:</strong> @Model.Status
                </p>

                <p class="card-text">
                    <small class="text-muted">
                        Ngày tạo: @Model.CreatedDate.ToString("dd/MM/yyyy") <br />
                        Ngày cập nhật:
                        @(Model.UpdatedDate.HasValue
                            ? Model.UpdatedDate.Value.ToString("dd/MM/yyyy")
                            : "Chưa cập nhật")
                    </small>
                </p>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
