
@model DATN.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h1 class="mb-4">Chi tiết sản phẩm</h1>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ThumbnailImage))
            {
                <img src="@Model.ThumbnailImage" class="img-fluid rounded-start" alt="Ảnh sản phẩm" />
            }
            else
            {
                <div class="text-muted text-center p-4">Chưa có ảnh</div>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.ProductName</h5>
                <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>

                <p class="card-text">
                    <strong>Giá bán:</strong> @Model.SalePrice.ToString("N0") ₫ <br />
                    <strong>Giá gốc:</strong> @Model.OriginalPrice.ToString("N0") ₫
                </p>

                <p class="card-text">
                    <strong>Tồn kho:</strong> @Model.Stock <br />
                    <strong>Kích thước:</strong> @Model.Size <br />
                    <strong>Màu sắc:</strong> @Model.Color <br />
                    <strong>Chất liệu:</strong> @Model.Material <br />
                    <strong>Danh mục (ID):</strong> @Model.CategoryId
                </p>

                <p class="card-text">
                    <strong>Trạng thái:</strong> @Model.Status
                </p>

                <p class="card-text">
                    <small class="text-muted">
                        Ngày tạo: @Model.CreatedDate.ToString("dd/MM/yyyy")<br />
                        Ngày cập nhật: @(Model.UpdatedDate.HasValue ? Model.UpdatedDate.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                    </small>
                </p>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
