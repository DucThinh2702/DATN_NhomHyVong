                rows.forEach(row => {
                    const productName = row.querySelector('td .fw-bold').textContent.toLowerCase();
                    const sku = row.querySelector('td small').textContent.toLowerCase();

                    if (productName.includes(searchTerm) || sku.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });

