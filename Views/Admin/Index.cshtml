@using DATN.Models.ViewModels
@model DashboardViewModel
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - The Bag Studio Admin</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    

</head>
<body>

    <div class="main-content" id="mainContent">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary me-3" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>

                <div>
                    <h4 class="mb-0">Thống kê</h4>
                    <small class="text-muted">Tổng quan hoạt động cửa hàng</small>
                </div>

                <div class="d-flex align-items-center ms-auto">

                    <div class="dropdown me-2">
                        <button class="btn btn-outline-secondary position-relative" data-bs-toggle="dropdown">
                            <i class="fas fa-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">5</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Mã SALE50 sắp hết hạn</a></li>
                            <li><a class="dropdown-item" href="#">Mã NEWUSER đã được sử dụng 100 lần</a></li>
                            <li><a class="dropdown-item" href="#">Cần tạo mã cho chiến dịch mới</a></li>
                        </ul>
                    </div>

                    <div class="dropdown">
                        <button class="btn btn-outline-secondary d-flex align-items-center" data-bs-toggle="dropdown">
                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                <i class="fas fa-user text-dark small"></i>
                            </div>
                            <div class="text-start d-none d-md-block">
                                <div class="small fw-bold">Admin User</div>
                                <div class="small text-muted">Quản trị viên</div>
                            </div>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#" onclick="logout()"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container-fluid p-4">
            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Doanh thu tháng này
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">@Model.DoanhThuThangNay.ToString("N0") VNĐ</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Đơn hàng mới
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">@Model.DonHangMoi.ToString("N0")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-shopping-cart fa-2x text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Khách hàng đăng ký
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">@Model.SoKhachHangMoi.ToString("N0")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-info"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Sản phẩm trong kho
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">@Model.TongSanPhamTrongKho.ToString("N0")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-shopping-bag fa-2x text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Row -->
            <div class="row mb-4">
                <div class="col-xl-8 col-lg-7">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold">Doanh thu & Đơn hàng</h6>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary active">7 ngày</button>
                                <button class="btn btn-outline-primary">30 ngày</button>
                                <button class="btn btn-outline-primary">90 ngày</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="revenueChart" height="300"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-lg-5">
                    <div class="card h-100">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold">Hoạt động gần đây</h6>
                        </div>
                        <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                            <div class="activity-item">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width:32px; height:32px;">
                                        <i class="fas fa-shopping-cart text-white small"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold small">Đơn hàng mới #ORD-1247</div>
                                        <div class="text-muted small">Nguyễn Văn A đã đặt mua Túi xách da cao cấp</div>
                                        <div class="text-muted small">2 phút trước</div>
                                    </div>
                                </div>
                            </div>

                            <div class="activity-item">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width:32px; height:32px;">
                                        <i class="fas fa-user-plus text-white small"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold small">Khách hàng mới đăng ký</div>
                                        <div class="text-muted small">Trần Thị B vừa tạo tài khoản mới</div>
                                        <div class="text-muted small">5 phút trước</div>
                                    </div>
                                </div>
                            </div>

                            <div class="activity-item">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width:32px; height:32px;">
                                        <i class="fas fa-exclamation-triangle text-white small"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold small">Sản phẩm sắp hết hàng</div>
                                        <div class="text-muted small">Balo du lịch chỉ còn 5 sản phẩm</div>
                                        <div class="text-muted small">10 phút trước</div>
                                    </div>
                                </div>
                            </div>

                            <div class="activity-item">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-3" style="width:32px; height:32px;">
                                        <i class="fas fa-credit-card text-white small"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold small">Thanh toán thành công</div>
                                        <div class="text-muted small">Đơn hàng #ORD-1245 đã được thanh toán</div>
                                        <div class="text-muted small">15 phút trước</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Data Tables -->
            <div class="row">
                <div class="col-xl-6 col-lg-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold">Đơn hàng gần đây</h6>
                            <div>
                                <button class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-download"></i> Xuất Excel
                                </button>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> Thêm đơn hàng
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã đơn</th>
                                            <th>Khách hàng</th>
                                            <th>Tổng tiền</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var dh in Model.DonHangGanDay)
                                        {
                                            <tr>
                                                <td><strong>@dh.MaDon</strong></td>
                                                <td>@dh.TenKhachHang</td>
                                                <td><strong>@dh.TongTien.ToString("N0") VNĐ</strong></td>
                                                <td><span class="badge bg-info">@dh.TrangThai</span></td>
                                                <td>
                                                    <div class="d-flex gap-2">
                                                        <button class="btn btn-outline-primary btn-sm" title="Xem">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        <button class="btn btn-outline-warning btn-sm" title="Sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger btn-sm" title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-6 col-lg-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold">Sản phẩm bán chạy</h6>
                            <div>
                                <button class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-chart-bar"></i> Xem báo cáo
                                </button>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> Thêm sản phẩm
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th>Danh mục</th>
                                            <th>Đã bán</th>
                                            <th>Doanh thu</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var sp in Model.SanPhamBanChay)
                                        {
                                            <tr>
                                                <td><strong>@sp.TenSanPham</strong></td>
                                                <td>@sp.DanhMuc</td>
                                                <td><strong>@sp.SoLuongBan</strong></td>
                                                <td><strong>@sp.DoanhThu.ToString("N0") VNĐ</strong></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* === DASHBOARD CONTENT BẮT ĐẦU TẠI ĐÂY === *@
            <!-- Bạn dán nguyên phần dashboard mình đã gửi ở trên vào đây -->
            <!-- Quá dài nên mình không paste hết vào 1 lần để tránh vượt giới hạn. -->
            <!-- Nếu bạn muốn mình gửi trọn đoạn content kèm sẵn ở đây, bạn reply "Gửi tiếp nội dung" và mình sẽ chia thành nhiều phần paste lần lượt. -->
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function(){
            const sidebar=document.getElementById('sidebar');
            const main=document.getElementById('mainContent');
            sidebar.classList.toggle('collapsed');
            main.classList.toggle('expanded');
        });
        function logout(){
            if(confirm('Bạn có chắc chắn muốn đăng xuất?')){
                alert('Đăng xuất thành công!');
            }
        }
        const ctx=document.getElementById('revenueChart').getContext('2d');
                                new Chart(ctx,{type:'line',data:{labels: @Html.Raw(Json.Serialize(Model.LabelsDoanhThu)),datasets:[{label:'Doanh thu (triệu VNĐ)',data: @Html.Raw(Json.Serialize(Model.DataDoanhThu.Select(x => Math.Round(x / 1000000M, 2)))),borderColor:'#ffc107',backgroundColor:'rgba(255,193,7,0.1)',tension:0.4,fill:true},{label:'Đơn hàng',data: @Html.Raw(Json.Serialize(Model.DataDonHang)),borderColor:'#0d6efd',backgroundColor:'rgba(13,110,253,0.1)',tension:0.4,fill:true}]},options:{responsive:true,maintainAspectRatio:false,plugins:{legend:{position:'top'}},scales:{y:{beginAtZero:true}}}});
    </script>
</body>
</html>
