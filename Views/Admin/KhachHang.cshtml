@model DATN.Models.User
@using DATN.Models
@{
    ViewData["Title"] = "Khách hàng - The Bag Studio Admin";
}
@{
    var users = ViewBag.ListCombinedKH as List<DATN.Models.User>
             ?? ViewBag.ListSearchKH as List<DATN.Models.User>
             ?? ViewBag.ListFilterKH as List<DATN.Models.User>
             ?? ViewBag.ListKH as List<DATN.Models.User>
             ?? new List<DATN.Models.User>();
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khách hàng - The Bag Studio Admin</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for enhanced modal appearance */
        .modal-dialog {
            max-width: 800px; /* Adjust max-width as needed for wider screens */
            margin-top: 50px; /* Add some top margin to center it better */
        }

        .modal-content {
            border-radius: 10px; /* Slightly rounded corners for a softer look */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }

        .modal-header {
            background-color: #f8f9fa; /* Light background for the header */
            border-bottom: 1px solid #dee2e6; /* Separator line */
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .modal-title {
            font-weight: 600; /* Slightly bolder title */
            color: #343a40; /* Darker text color */
        }

        .modal-body {
            padding: 2rem; /* Increase padding for more breathing room */
        }

        .form-label {
            font-weight: 500; /* Make labels a bit more prominent */
            color: #495057; /* Slightly darker label color */
        }

        .form-control, .form-select {
            border-radius: 5px; /* Slightly rounded input fields */
            border: 1px solid #ced4da;
        }

        .btn-primary {
            background-color: #007bff; /* Standard Bootstrap primary blue */
            border-color: #007bff;
            transition: background-color 0.2s ease, border-color 0.2s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            transition: background-color 0.2s ease, border-color 0.2s ease;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
    <style>
        :root {
            --primary-color: #ffc107;
            --sidebar-width: 280px;
        }

        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(135deg, #1a1d29 0%, #2c3142 100%);
            color: white;
            overflow-y: auto;
            z-index: 1000;
            transition: all 0.3s ease;
        }

            .sidebar.collapsed {
                width: 80px;
            }

        .main-content {
            margin-left: var(--sidebar-width);
            transition: all 0.3s ease;
        }

            .main-content.expanded {
                margin-left: 80px;
            }

        .nav-link {
            color: rgba(255,255,255,0.8) !important;
            border-radius: 8px;
            margin: 2px 0;
            transition: all 0.3s ease;
        }

            .nav-link:hover, .nav-link.active {
                background: rgba(255,255,255,0.1) !important;
                color: white !important;
                transform: translateX(8px);
            }

        .sidebar.collapsed .nav-link:hover,
        .sidebar.collapsed .nav-link.active {
            transform: none;
        }

        .sidebar.collapsed .nav-text {
            display: none;
        }

        .brand-logo {
            background: linear-gradient(135deg, var(--primary-color), #e0a800);
            color: #1a1d29;
            padding: 8px 12px;
            border-radius: 8px;
            font-weight: bold;
            font-size: 14px;
        }

        .customer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), #e0a800);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #1a1d29;
            font-weight: bold;
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 80px;
            }

            .main-content {
                margin-left: 80px;
            }

            .sidebar.collapsed {
                width: 0;
                transform: translateX(-100%);
            }

            .main-content.expanded {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar (same as other pages) -->
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="p-3 border-bottom border-secondary">
            <div class="d-flex align-items-center justify-content-center mb-3">
                <div class="d-flex shadow-sm rounded overflow-hidden">
                    <span class="px-3 py-1 text-warning fw-bold bg-secondary">THE BAG</span>
                    <span class="px-3 py-1 text-dark fw-bold bg-warning">STUDIO</span>
                </div>
            </div>
            <div class="text-center">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center shadow-sm overflow-hidden" style="width:60px;height:60px;">
                    <img src="~/hinh/logo.jpg" alt="Logo" class="img-fluid" style="max-width:100%;max-height:100%;" />
                </div>
                <div class="mt-2">
                    <h6 class="mb-0 text-white">Admin User</h6>
                    <small class="text-secondary">Quản trị viên</small>
                </div>
            </div>
        </div>
        <nav class="p-3">
            <div class="mb-4">
                <h6 class="text-secondary fw-semibold mb-2">Tổng quan</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-chart-pie me-2"></i><span class="nav-text">Thống kê</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="PhanTich">
                            <i class="fas fa-chart-line me-2"></i><span class="nav-text">Phân tích</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="mb-4">
                <h6 class="text-secondary fw-semibold mb-2">Quản lý</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="SanPham">
                            <i class="fas fa-shopping-bag me-2"></i><span class="nav-text">Sản phẩm</span><span class="badge bg-primary ms-auto nav-text">567</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="DonHang">
                            <i class="fas fa-shopping-cart me-2"></i><span class="nav-text">Đơn hàng</span><span class="badge bg-danger ms-auto nav-text">24</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="KhachHang">
                            <i class="fas fa-users me-2"></i><span class="nav-text">Khách hàng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="DanhMuc">
                            <i class="fas fa-tags me-2"></i><span class="nav-text">Danh mục</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="KhoHang">
                            <i class="fas fa-warehouse me-2"></i><span class="nav-text">Kho hàng</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="mb-4">
                <h6 class="text-secondary fw-semibold mb-2">Marketing</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="ChienDich">
                            <i class="fas fa-bullhorn me-2"></i><span class="nav-text">Chiến dịch</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="MaGiamGia">
                            <i class="fas fa-ticket-alt me-2"></i><span class="nav-text">Mã giảm giá</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="mb-4">
                <h6 class="text-secondary fw-semibold mb-2">Hệ thống</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="CaiDat">
                            <i class="fas fa-cog me-2"></i><span class="nav-text">Cài đặt</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#" onclick="logout()">
                            <i class="fas fa-sign-out-alt me-2"></i><span class="nav-text">Đăng xuất</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary me-3" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>

                <div>
                    <h4 class="mb-0">Khách hàng</h4>
                    <small class="text-muted">Quản lý thông tin khách hàng</small>
                </div>

                <div class="d-flex align-items-center ms-auto">
                    @* Tìm kiếm khách hàng (SEARCH) *@
                    <form method="get" asp-action="KhachHang" asp-controller="Admin">
                        <div class="input-group" style="width: 300px;">
                            <input type="text" name="searchName" class="form-control" placeholder="Tìm kiếm khách hàng..." value="@ViewBag.ListSearchKH" />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                    @* END Tìm kiếm khách hàng (SEARCH) *@
                    <div class="dropdown me-2">
                        <button class="btn btn-outline-secondary position-relative" data-bs-toggle="dropdown">
                            <i class="fas fa-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Khách hàng mới đăng ký</a></li>
                            <li><a class="dropdown-item" href="#">Sinh nhật khách hàng VIP</a></li>
                        </ul>
                    </div>

                    <div class="dropdown">
                        <button class="btn btn-outline-secondary d-flex align-items-center" data-bs-toggle="dropdown">
                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                <i class="fas fa-user text-dark small"></i>
                            </div>
                            <div class="text-start d-none d-md-block">
                                <div class="small fw-bold">Admin User</div>
                                <div class="small text-muted">Quản trị viên</div>
                            </div>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#" onclick="logout()"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Customers Content -->
        <div class="container-fluid">
            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng khách hàng</div>
                                    <div class="h5 mb-0 font-weight-bold">3,892</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Khách hàng mới</div>
                                    <div class="h5 mb-0 font-weight-bold">156</div>
                                    <div class="text-success small">Tháng này</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-plus fa-2x text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Khách VIP</div>
                                    <div class="h5 mb-0 font-weight-bold">234</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-crown fa-2x text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Đang hoạt động</div>
                                    <div class="h5 mb-0 font-weight-bold">2,847</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-check fa-2x text-info"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customers Table -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">Danh sách khách hàng</h6>
                    <div class="d-flex">

                        @* Form filter *@
                        <form method="get" asp-action="KhachHang" class="d-flex me-2">
                            <select name="filterBy" class="form-select me-2" style="width: 150px;">
                                <option value="">-- Bộ lọc --</option>
                                <option value="money" selected="@(ViewBag.CurrentFilter == "money")">Theo tiền</option>
                                <option value="date" selected="@(ViewBag.CurrentFilter == "date")">Theo ngày</option>
                            </select>
                            <button class="btn btn-outline-secondary btn-sm me-2" type="submit">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </form>
                        @* END Form filter *@

                        <button class="btn btn-outline-primary btn-sm me-2">
                            <i class="fas fa-download"></i> Xuất Excel
                        </button>
                        <!-- Thêm -->
                        <button class="btn btn-success" onclick='openUserModal("create")'>
                            <i class="fas fa-plus"></i> Thêm khách hàng
                        </button>

                    </div>
                </div>
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-hover" id="customersTable">
                            <thead>
                                <tr>
                                    <th>Khách hàng</th>
                                    <th>Liên hệ</th>
                                    <th>Đơn hàng</th>
                                    <th>Tổng chi tiêu</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tham gia</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in users)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="customer-avatar me-3">
                                                    @((user.FullName ?? user.Username ?? "NA").Split(' ').Select(w => w[0]).Take(2).Aggregate("", (a, b) => a + b))
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@user.FullName</div>
                                                    <small class="text-muted">ID: USER-@user.UserId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <div>@user.Email</div>
                                                <small class="text-muted">@user.PhoneNumber</small>
                                            </div>
                                        </td>
                                        <td><strong>@(user.Orders?.Count() ?? 0)</strong></td>
                                        <td>
                                            <strong>@string.Format("{0:C0}", user.Orders?.Sum(o => o.TotalAmount) ?? 0)</strong>
                                        </td>
                                        <td>
                                            <span class="badge
                                                                                            @(user.Orders?.Count() >= 10 ? "bg-warning" :
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          user.Orders?.Count() >= 5 ? "bg-primary" : "bg-success")">
                                                @(user.Orders?.Count() >= 10 ? "VIP" :
                                                                                            user.Orders?.Count() >= 5 ? "Thường xuyên" : "Mới")
                                        </span>
                                    </td>
                                    <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <!-- Xem chi tiết -->
                                            <button class="btn btn-outline-primary" onclick='openUserModal("view", @Html.Raw(Json.Serialize(user)))'>
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <!-- Sửa -->
                                            <button class="btn btn-warning" onclick='openUserModal("edit", @Html.Raw(Json.Serialize(user)))'>
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <a href="mailto:@user.Email" class="btn btn-outline-info" title="Gửi email">
                                                <i class="fas fa-envelope"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Pagination -->
                    <nav aria-label="Customers pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Trước</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Sau</a>
                            </li>
                        </ul>
                    </nav>
                    <!-- End-Pagination -->
                </div>
            </div>
        </div>
        <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }
                    <form id="userForm" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title" id="userModalLabel">Thêm khách hàng</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="userId" name="UserId" />
                            <input type="hidden" id="createdDate" name="CreatedDate" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="fullName" class="form-label">Họ và tên</label>
                                        <input type="text" name="FullName" id="fullName" class="form-control" />
                                        <span id="fullNameError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" name="Username" id="username" class="form-control" />
                                        <span id="usernameError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" name="Email" id="email" class="form-control" />                                       
                                        <span id="emailError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3" id="passwordGroup">
                                        <label for="password">Mật khẩu</label>
                                        <input type="password" id="password" name="Password" class="form-control" />
                                        <span id="passwordError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="phoneNumber" class="form-label">Số điện thoại</label>
                                        <input type="tel" name="PhoneNumber" id="phoneNumber" class="form-control" />
                                        <span id="phoneNumberError" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="address" class="form-label">Địa chỉ</label>
                                        <textarea name="Address" id="address" class="form-control" rows="3"></textarea>
                                        <span id="addressError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="birthDate" class="form-label">Ngày sinh</label>
                                        <input type="date" name="BirthDate" id="birthDate" class="form-control" />
                                        <span id="birthDateError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="gender" class="form-label">Giới tính</label>
                                        <select name="Gender" id="gender" class="form-select">
                                            <option value="">Chọn giới tính</option>
                                            <option value="Nam">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                            <option value="Khác">Khác</option>
                                        </select>
                                        <span id="genderError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="roleId" class="form-label">Vai trò</label>
                                        <select name="RoleId" id="roleId" class="form-select">
                                            <option value="">Chọn Role</option>
                                            <option value="1">1 - Khách hàng</option>
                                            <option value="2">2 - Nhân viên</option>
                                            <option value="3">3 - Admin</option>
                                        </select>
                                        <span id="roleIdError" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-primary" id="submitBtn">Lưu</button>
                        </div>
                    </form>

