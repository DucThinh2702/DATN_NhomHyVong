    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
            // Sidebar Toggle
            document.getElementById('sidebarToggle').addEventListener('click', function() {
                const sidebar = document.getElementById('sidebar');
                const mainContent = document.getElementById('mainContent');

                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');

                localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
            });

            // Restore sidebar state
            if (localStorage.getItem('sidebarCollapsed') === 'true') {
                document.getElementById('sidebar').classList.add('collapsed');
                document.getElementById('mainContent').classList.add('expanded');
            }

            // Logout function
            function logout() {
                if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                    alert('Đăng xuất thành công!');
                }
            }

            // Save all settings
            function saveAllSettings() {
                // Collect all form data
                const settings = {
                    general: {
                        storeName: document.getElementById('storeName').value,
                        storeEmail: document.getElementById('storeEmail').value,
                        storeDescription: document.getElementById('storeDescription').value,
                        storePhone: document.getElementById('storePhone').value,
                        storeWebsite: document.getElementById('storeWebsite').value,
                        storeAddress: document.getElementById('storeAddress').value,
                        timezone: document.getElementById('timezone').value,
                        currency: document.getElementById('currency').value,
                        language: document.getElementById('language').value
                    },
                    notifications: {
                        newOrders: document.getElementById('notifyNewOrders').checked,
                        lowStock: document.getElementById('notifyLowStock').checked,
                        newCustomers: document.getElementById('notifyNewCustomers').checked,
                        dailyReport: document.getElementById('notifyDailyReport').checked,
                        payments: document.getElementById('notifyPayments').checked,
                        reviews: document.getElementById('notifyReviews').checked
                    },
                    payments: {
                        cod: document.getElementById('paymentCOD').checked,
                        bank: document.getElementById('paymentBank').checked,
                        ewallet: document.getElementById('paymentEWallet').checked,
                        card: document.getElementById('paymentCard').checked,
                        bankAccount: document.getElementById('bankAccount').value,
                        bankName: document.getElementById('bankName').value
                    },
                    shipping: {
                        freeShipping: document.getElementById('freeShipping').value,
                        shippingFee: document.getElementById('shippingFee').value,
                        processingTime: document.getElementById('processingTime').value,
                        deliveryTime: document.getElementById('deliveryTime').value,
                        shippingAreas: document.getElementById('shippingAreas').value
                    },
                    security: {
                        enable2FA: document.getElementById('enable2FA').checked,
                        enableActivityLog: document.getElementById('enableActivityLog').checked,
                        sessionTimeout: document.getElementById('sessionTimeout').value,
                        maxLoginAttempts: document.getElementById('maxLoginAttempts').value
                    },
                    appearance: {
                        theme: document.getElementById('theme').value,
                        sidebarPosition: document.getElementById('sidebarPosition').value,
                        collapseSidebar: document.getElementById('collapseSidebar').checked,
                        enableAnimations: document.getElementById('enableAnimations').checked,
                        primaryColor: document.querySelector('input[name="primaryColor"]:checked').value
                    }
                };

                // Save to localStorage (in real app, send to server)
                localStorage.setItem('adminSettings', JSON.stringify(settings));

                // Show success message
                alert('Cài đặt đã được lưu thành công!');

                // Apply theme changes immediately
                applyThemeChanges(settings.appearance);
            }

            // Change password
            function changePassword() {
                const currentPassword = document.getElementById('currentPassword').value;
                const newPassword = document.getElementById('newPassword').value;
                const confirmPassword = document.getElementById('confirmPassword').value;

                if (!currentPassword || !newPassword || !confirmPassword) {
                    alert('Vui lòng điền đầy đủ thông tin!');
                    return;
                }

                if (newPassword !== confirmPassword) {
                    alert('Mật khẩu xác nhận không khớp!');
                    return;
                }

                if (newPassword.length < 6) {
                    alert('Mật khẩu phải có ít nhất 6 ký tự!');
                    return;
                }

                // In real app, verify current password and update
                alert('Mật khẩu đã được thay đổi thành công!');

                // Clear form
                document.getElementById('currentPassword').value = '';
                document.getElementById('newPassword').value = '';
                document.getElementById('confirmPassword').value = '';
            }

            // Apply theme changes
            function applyThemeChanges(appearance) {
                // Apply primary color
                document.documentElement.style.setProperty('--primary-color', appearance.primaryColor);

                // Apply theme
                if (appearance.theme === 'dark') {
                    document.body.classList.add('dark-theme');
                } else {
                    document.body.classList.remove('dark-theme');
                }

                // Apply sidebar position
                if (appearance.sidebarPosition === 'right') {
                    // Move sidebar to right (would need CSS changes)
                    console.log('Sidebar moved to right');
                }
            }

            // Load saved settings on page load
            document.addEventListener('DOMContentLoaded', function() {
                const savedSettings = localStorage.getItem('adminSettings');
                if (savedSettings) {
                    const settings = JSON.parse(savedSettings);

                    // Load general settings
                    if (settings.general) {
                        Object.keys(settings.general).forEach(key => {
                            const element = document.getElementById(key);
                            if (element) element.value = settings.general[key];
                        });
                    }

                    // Load notification settings
                    if (settings.notifications) {
                        Object.keys(settings.notifications).forEach(key => {
                            const element = document.getElementById('notify' + key.charAt(0).toUpperCase() + key.slice(1));
                            if (element) element.checked = settings.notifications[key];
                        });
                    }

                    // Apply appearance settings
                    if (settings.appearance) {
                        applyThemeChanges(settings.appearance);
                    }
                }
            });

            // Auto-save on input change
            document.addEventListener('input', function(e) {
                if (e.target.matches('input, select, textarea')) {
                    // Debounce auto-save
                    clearTimeout(window.autoSaveTimeout);
                    window.autoSaveTimeout = setTimeout(() => {
                        console.log('Auto-saving settings...');
                        // In real app, auto-save to server
                    }, 2000);
                }
            });
              document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname.split("/").pop(); // Lấy tên file cuối
            const navLinks = document.querySelectorAll(".sidebar .nav-link");

            navLinks.forEach(link => {
                const href = link.getAttribute("href");
                if (href && currentPath === href) {
                    link.classList.add("active");
                } else {
                    link.classList.remove("active");
                }
            });
        });
    </script>
