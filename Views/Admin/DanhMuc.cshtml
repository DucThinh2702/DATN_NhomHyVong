@model IEnumerable<DATN.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
    var totalCount = Model.Count();
}

<h2>Danh sách danh mục</h2>

<div class="mb-3">
    <span class="badge bg-primary">Tổng danh mục: @totalCount</span>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo mới danh mục</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Tên danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.CategoryImage))
                    {
                        <img src="~/hinh/@item.CategoryImage" alt="Hình ảnh" style="max-width:100px; max-height:100px;" />
                    }
                    else
                    {
                        <span>Chưa có hình</span>
                    }
                </td>
                <td>@item.CategoryName</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
