@model IEnumerable<DATN.Models.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<<div class="row mb-4">
    <div class="col-md-3">
        <div class="border border-primary rounded p-3 d-flex justify-content-between align-items-center">
            <div>
                <div class="text-muted">Tổng sản phẩm</div>
                <div class="fs-4 fw-bold">@ViewBag.TotalCount</div>
            </div>
            <i class="fas fa-box text-primary fs-3"></i>
        </div>
    </div>
    <div class="col-md-3">
        <div class="border border-success rounded p-3 d-flex justify-content-between align-items-center">
            <div>
                <div class="text-muted">Đang bán</div>
                <div class="fs-4 fw-bold">@ViewBag.InStockCount</div>
            </div>
            <i class="fas fa-check-circle text-success fs-3"></i>
        </div>
    </div>
    <div class="col-md-3">
        <div class="border border-warning rounded p-3 d-flex justify-content-between align-items-center">
            <div>
                <div class="text-muted">Sắp hết hàng</div>
                <div class="fs-4 fw-bold">@ViewBag.LowStockCount</div>
            </div>
            <i class="fas fa-exclamation-triangle text-warning fs-3"></i>
        </div>
    </div>
    <div class="col-md-3">
        <div class="border border-danger rounded p-3 d-flex justify-content-between align-items-center">
            <div>
                <div class="text-muted">Hết hàng</div>
                <div class="fs-4 fw-bold">@ViewBag.OutOfStockCount</div>
            </div>
            <i class="fas fa-times-circle text-danger fs-3"></i>
        </div>
    </div>
</div>

    <!-- Tiêu đề + Tìm kiếm + Thêm mới -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Danh sách sản phẩm</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>

    <!-- Bảng sản phẩm -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Danh mục</th>
                    <th>Giá bán</th>
                    <th>Tồn kho</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.HinhAnh))
                            {
                                <img src="~/hinh/@item.HinhAnh" style="width:60px; height:60px; object-fit:cover; border-radius:8px;" />
                            }
                            else
                            {
                                <span class="text-muted">Chưa có</span>
                            }
                        </td>
                        <td>
                            <strong>@item.TenSP</strong><br />
                            <small class="text-muted">Mã: @item.MaSP</small>
                        </td>
                        <td>
                            @item.DanhMuc?.TenDanhMuc
                        </td>
                        <td>@item.GiaBan.ToString("N0") ₫</td>
                        <td>@item.SoLuong</td>
                        <td>
                            @{
                                var statusClass = item.TrangThai switch
                                {
                                    "Đang bán" => "badge bg-success",
                                    "Ngừng bán" => "badge bg-secondary",
                                    "Sắp hết" => "badge bg-warning text-dark",
                                    _ => "badge bg-light text-dark"
                                };
                            }
                            <span class="@statusClass">@item.TrangThai</span>
                        </td>
                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.MaSP" class="btn btn-outline-primary" title="Xem">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.MaSP" class="btn btn-outline-warning" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaSP" class="btn btn-outline-danger" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
